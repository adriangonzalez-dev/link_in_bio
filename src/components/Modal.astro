---
import Carousel from "./Carousel.astro"
---

<!-- Modal Structure -->
<div id="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white p-5 rounded-lg w-full m-2">
      <h2 class="text-xl mb-4 text-center">Hace clic en el diseño que te guste!</h2>
      <Carousel/>
      <button id="close-modal" class="mt-4 bg-blue-500 text-white py-2 px-4 rounded">Cerrar</button>
    </div>
</div>
<style>
    /* Estilos básicos del modal */
    #modal.hidden {
    display: none;
    opacity: 0;
    transform: scale(0.9) translateY(-20px); /* Desplazar y escalar el modal */
    filter: blur(10px); /* Añadir desenfoque */
    transition: opacity 0.6s ease, transform 0.6s ease, filter 0.6s ease; /* Animación */
    }

    /* Mostrar el modal con transición */
    #modal {
    display: flex;
    opacity: 0;
    transform: scale(0.9) translateY(-20px); /* Desplazar y escalar el modal */
    filter: blur(10px); /* Añadir desenfoque */
    transition: opacity 0.6s ease, transform 0.6s ease, filter 0.6s ease; /* Animación */
    }

    /* Cuando el modal esté visible */
    #modal:not(.hidden) {
    opacity: 1;
    transform: scale(1) translateY(0); /* Volver a su tamaño y posición original */
    filter: blur(0); /* Quitar el desenfoque */
    }
</style>